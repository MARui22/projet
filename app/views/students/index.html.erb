<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th width="50">Name</th>
      <th width="70">Surname</th>
      <th width="100">Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.surname %></td>
        <td><%= student.birthday %></td>
        <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-default btn-info"><%= link_to 'Show', student %></button>
          </div> 
        </td>
        <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-default btn-warning"><%= link_to 'Edit', edit_student_path(student) %></button>
          </div>
        </td>
        <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-default btn-danger"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn-defaut">
          <button type="button" class="btn btn-default btn-sm"><%= link_to 'New student', new_student_path %></button>
          </div>

