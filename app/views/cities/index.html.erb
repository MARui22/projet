<h1>Listing cities</h1>

<table>
  <thead>
    <tr>
      <th width="100">Name</th>
      <th width="100">Lat</th>
      <th width="100">Lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td ><%= city.name %></td>
        <td><%= city.lat %></td>
        <td><%= city.lon %></td>
        <td>
           <div class="btn-defaut">
          <button type="button" class="btn btn-default btn-info"><%= link_to 'Show', city %></button>
          </div> 
        </td>
        <td>
           <div class="btn-defaut">
          <button type="button" class="btn btn-default btn-warning"><%= link_to 'Edit', edit_city_path(city) %></button>
          </div> 
        </td>
        <td>
          <div class="btn-defaut">
          <button type="button" class="btn btn-default btn-danger"><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn-defaut">
          <button type="button" class="btn btn-default btn-sm"><%= link_to 'New city', new_city_path %></button>
          </div>

